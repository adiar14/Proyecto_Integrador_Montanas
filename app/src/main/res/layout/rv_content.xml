<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--lalalala-->
    <ImageView
        android:id="@+id/ivImagenIncidenciaContent"
        android:layout_width="422dp"
        android:layout_height="258dp"
        app:srcCompat="@drawable/img2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivImagenIncidenciaContent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="15dp"
        android:layout_x="0dp"
        android:layout_y="125dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvDescripcionIncidenciaContent"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <!-- <TextView
                android:id="@+id/tvLongitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tvNombre"
                android:text="TextView"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tvPendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLongitud"
                android:layout_alignStart="@+id/tvNombre"
                android:text="TextView"
                android:textColor="@color/colorAccent" />-->

            <TextView
                android:id="@+id/tvDificultad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvDescripcionIncidenciaContent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="TextView"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tvSuciedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvDificultad"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="TextView"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>